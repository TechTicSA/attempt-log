    <script>
        const mockLogs = [
            { date: "2026.02.01 | 14:00:22", status: "Verified", color: "#10b981", emails: ["verification@external-audit.com"] },
            { date: "2026.02.01 | 14:00:22", status: "Pending", color: "#f59e0b", emails: ["verification@external-audit.com"] },
            { date: "2026.01.28 | 09:12:45", status: "Initiated", color: "#a855f7", emails: ["admin@techtic.sa", "legal@techtic.sa"] }
        ];

        function executeSearch() {
            const val = document.getElementById('ticketInput').value;
            if(!val) return;

            const btnLabel = document.getElementById('btnLabel');
            const loader = document.getElementById('loader');
            
            btnLabel.style.display = 'none';
            loader.style.display = 'block';

            setTimeout(() => {
                loader.style.display = 'none';
                btnLabel.style.display = 'block';
                document.getElementById('idSpan').innerText = val;
                document.getElementById('resultsPanel').style.display = 'block';
                renderData();
            }, 1200);
        }

        function renderData() {
            const stack = document.getElementById('logStack');
            stack.innerHTML = mockLogs.map(log => `
                <div class="activity-card">
                    <div class="card-meta">
                        <span style="font-family:'JetBrains Mono'; font-size: 12px; color:var(--text-dim)">${log.date}</span>
                        <div class="status-indicator">
                            <div class="dot" style="background:${log.color}"></div>
                            <span style="color:${log.color}">${log.status}</span>
                        </div>
                    </div>
                    <div class="email-vault">
                        ${log.emails.map(m => `
                            <div class="email-item" onclick="copyText('${m}')">
                                <span>${m}</span>
                                <small style="color:var(--accent); font-weight:bold; font-size:10px">COPY</small>
                            </div>
                        `).join('')}
                    </div>
                    <div style="display:flex; justify-content: flex-end;">
                        <button class="btn-action" onclick="showToast('Initiating Download...')">Download Attempt</button>
                    </div>
                </div>
            `).join('');
        }

        function toggleAI() {
            const box = document.getElementById('aiBox');
            box.style.display = (box.style.display === 'block') ? 'none' : 'block';
        }

        function copyText(txt) {
            navigator.clipboard.writeText(txt);
            showToast("Copied: " + txt);
        }

        function showToast(msg) {
            const t = document.getElementById('toast');
            t.innerText = msg;
            t.classList.add('show');
            setTimeout(() => t.classList.remove('show'), 3000);
        }
    </script>
</body>
